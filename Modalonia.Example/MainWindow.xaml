<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Modalonia.Example.MainWindow"
        Width="600" Height="350" WindowStartupLocation="CenterScreen"
        Title="Modalonia">
  <StackPanel>
    <TextBlock x:Name="result" Text="Modal Result: None" Margin="0,20" HorizontalAlignment="Center" TextAlignment="Center" FontSize="20" FontWeight="SemiBold" Foreground="Crimson"/>
    <Button x:Name="button" Content="SHOW MODAL" FontSize="20" Cursor="Hand" FontWeight="SemiBold" Padding="16.10" HorizontalAlignment="Center"/>
  </StackPanel>
</Window>
